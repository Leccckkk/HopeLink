@model WebsiteCharity.Models.Donation

<div class="wrapper" id="receiptWrapper">
    <h2>Donation Receipt</h2>

    <p><strong>Donor Name:</strong> @Model.DonorName</p>
    <p><strong>Amount Donated:</strong> @Model.Amount.ToString("C")</p>
    <p><strong>Date:</strong> @Model.Date.ToString("g")</p>
    <p><strong>Transaction ID:</strong> @Model.Id</p>
    <div style="margin: 30px 0; text-align: center;">
        <img src="@Url.Content("~/thankyou.gif")" alt="Thank you!" style="max-width: 100px;" />
    </div>

    <button id="printBtn">Print Receipt</button>
</div>

<style>
    .wrapper {
        max-width: 480px;
        margin: 50px auto;
        padding: 25px 35px;
        background: rgba(39, 39, 39, 0.85);
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.6);
        font-family: 'Montserrat', sans-serif;
        color: #f0f0f0;
        text-align: center;
    }

    h2 {
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 30px;
        color: #f9c74f;
        text-shadow: 0 0 8px #f9c74f88;
    }

    p {
        font-size: 1.1rem;
        margin: 12px 0;
        line-height: 1.5;
        color: #e0e0e0;
    }

    strong {
        color: #f9c74f;
        font-weight: 600;
    }

    button {
        margin-top: 40px;
        background-color: #f9c74f;
        border: none;
        color: #222;
        padding: 12px 32px;
        font-weight: 700;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 10px #f9c74f99;
    }

        button:hover {
            background-color: #f4b800;
            box-shadow: 0 6px 15px #f4b800cc;
        }

    @@media print {
        body *

    {
        visibility: hidden;
    }

    .wrapper, .wrapper * {
        visibility: visible;
    }

    .wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background: white !important;
        color: black !important;
        box-shadow: none !important;
        border-radius: 0 !important;
        padding: 0 !important;
        font-family: Arial, sans-serif !important;
    }

    button {
        display: none !important;
    }

    }
</style>

<script>
    document.getElementById('printBtn').addEventListener('click', () => {
        window.print();
    });
</script>
