@{
    ViewData["Title"] = "Blog";
}

<div class="wrapper">
    <div class="container mt-5">
        <div class="text-center mb-5">
            <h1 class="display-3 mb-3 text-primary">Our Blog</h1>
            <p class="lead mb-5">Stay updated with the latest news and stories from HopeLink.</p>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="blog-content">
                    <h3 class="text-center mb-4" style="font-family: 'Playfair Display', serif; color: var(--primary-brown);">Coming Soon</h3>
                    <p class="text-center lead">We're working on bringing you inspiring stories, impact updates, and insights from our charity work. Check back soon for our first blog posts!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.blog-content {
    background: rgba(253, 245, 230, 0.6);
    border-radius: 15px;
    padding: 2rem;
    border: 1px solid var(--soft-beige);
}
</style>
